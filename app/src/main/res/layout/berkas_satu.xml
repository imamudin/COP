<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="cop.imamudin.com.cop3.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#e1e6eb">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e1e6eb"
            android:clickable="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="36dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:id="@+id/img_kasus_nama"
                        android:src="@drawable/ic_remove"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text"
                        android:id="@+id/tv_kasus_id"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_kasus_nama"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:hint="Nama Kasus"
                        android:padding="10dip"
                        android:textSize="@dimen/abc_text_size_medium_material" />

                    <ImageButton
                        android:id="@+id/btn_search"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:src="@drawable/ic_search"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="36dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:id="@+id/img_kasus_lokasi"
                        android:src="@drawable/ic_remove"
                        android:layout_gravity="center_vertical" />

                    <EditText
                        android:id="@+id/et_lokasi"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:layout_weight="1"
                        android:inputType="textMultiLine"
                        android:hint="TKP/Lokasi"
                        android:padding="10dip"
                        android:textSize="@dimen/abc_text_size_medium_material" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Sasaran"
                        android:id="@+id/textView6"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="36dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:id="@+id/img_nama"
                        android:src="@drawable/ic_remove"
                        android:layout_gravity="center_vertical" />

                    <EditText
                        android:id="@+id/et_nama"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:hint="Nama"
                        android:padding="10dip"
                        android:textSize="@dimen/abc_text_size_medium_material" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="36dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:id="@+id/img_alamat"
                        android:src="@drawable/ic_remove"
                        android:layout_gravity="center_vertical" />

                    <EditText
                        android:id="@+id/et_alamat"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:layout_weight="1"
                        android:inputType="textMultiLine"
                        android:hint="Alamat"
                        android:padding="10dip"
                        android:textSize="@dimen/abc_text_size_medium_material" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Data Pertanyaan"
                        android:id="@+id/textView7"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:id="@+id/ll_pertanyaan">

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right">

                    <Button
                        android:id="@+id/btn_tambah_pertanyaan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pertanyaan"
                        android:drawableLeft="@drawable/ic_add"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Gambar"
                        android:id="@+id/textView8"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Maksimal 5 foto"
                        android:id="@+id/tv_keterangan_gambar"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp">

                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/ll_tambah_gambar_dalam"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal" >
                        </LinearLayout>
                    </HorizontalScrollView>
                    <ImageButton
                        android:id="@+id/btn_tambah_gambar"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="5dp"
                        android:scaleType="fitCenter"
                        android:background="@drawable/indicator_tambah_berkas"
                        android:src="@drawable/ic_add"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Button"
                        android:id="@+id/btnLokasi" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Simpan"
                    android:id="@+id/btn_simpan"
                    android:background="@drawable/btn_login_selector"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>